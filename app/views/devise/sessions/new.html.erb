<div class="container">
  <div class="form-login">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :placeholder => "Email", label: false,
                            required: false,
                            autofocus: true,
                            input_html: { class: "charlies-input", autocomplete: "email" } %>
        <%= f.input :password, :placeholder => "Password", label: false,
                               required: false,
                               input_html: { class: "charlies-input", autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "charlies-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>